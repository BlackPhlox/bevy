{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "language": "en-US",
    "dictionaryDefinitions": [
        {
            "name": "bevy",
            "path": "./.github/linters/spelling/bevy.txt"
        },
        {
            "name": "gamedev",
            "path": "./.github/linters/spelling/gamedev.txt"
        },
        {
            "name": "linux",
            "path": "./.github/linters/spelling/linux.txt"
        },
        {
            "name": "rust2",
            "path": "./.github/linters/spelling/rust.txt"
        }
    ],
    "dictionaries": [
        "bevy",
        "gamedev",
        "linux",
        "rust",
        "rust2",
        "software-terms",
        "misc"
    ],
    "loadDefaultConfiguration": true,
    "ignoreRegExpList": [
        "UUID",
        "Urls",
        "HexValues",
        "markdown-links",
        "cli-args",
        "long-runs-single-chars"
    ],
    "patterns": [
        {
            "name": "markdown-links",
            "pattern": "/\\[.*\\]\\(.*\\)/g"
        },
        {
            "name": "cli-args",
            "pattern": "/\\ -\\w+\\b/g"
        },
        {
            "name": "long-runs-single-chars",
            "pattern": "/([A-Za-z])\\1{3,}/g"
        }
    ],
    "ignorePaths": [
        "cspell.json",
        ".github/*",
        "*.(png|svg|gltf|ktx2|hdr|ogg|glb|ico|ttf|bin|gitignore|pbxproj)",
        "*.LICEN(S|C)E*",
        ".gitattributes",
        "CREDITS.md",
        "CHANGELOG.md",
        "*_cspell.txt"
    ],
    "enableFiletypes": [
        "ron",
        "toml",
        "wgsl"
    ]
}
